# Node environment
NODE_ENV=development

# Server configuration
PORT=8080

# MongoDB configuration
MONGODB_URI=mongodb://localhost:27017/ecommerce

# MySQL configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=ecommerce
MYSQL_USER=user
MYSQL_PASSWORD=password

# Redis configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT configuration
JWT_SECRET=your_jwt_secret_key
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key
JWT_EXPIRATION=1d
JWT_REFRESH_EXPIRATION=7d

# Cloudinary configuration (if used)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# AWS S3 configuration (if used)
AWS_S3_REGION=your_aws_region
AWS_S3_ACCESS_KEY=your_aws_access_key
AWS_S3_SECRET_KEY=your_aws_secret_key
AWS_S3_BUCKET=your_aws_bucket_name

# Google AI configuration (if used)
GOOGLE_API_KEY=your_google_api_key

# Discord configuration (if used)
DISCORD_TOKEN=your_discord_token
DISCORD_CHANNEL_ID=your_discord_channel_id
